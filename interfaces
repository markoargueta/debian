# ESCRIBIR LO SIGUIENTE AL FINAL DEL ARCHIVO /etc/network/interfaces

#IP FIJA A RED WI-FI Y QUE SE CONECTE AUTOMATICAMENTE AL ENCENDER LA LAPTOP
auto wlan0
iface wlan0 inet static
        address 192.168.0.10
        netmask 255.255.255.0
        network 192.168.0.1
        broadcast 192.168.0.255
        gateway 192.168.0.1
        wpa-ssid #NOMBRE DE LA RED WI-FI
        wpa-psk #CONTRASEÃ‘A DE LA RED WI-FI
